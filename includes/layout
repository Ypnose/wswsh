# Page content

function page_header {
	print '<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />'
	if (( WSH_CSS == 1 )); then
		print "\t<link rel=\"stylesheet\" type=\"text/css\" href=\"/${WSH_CSSFILE}\" />"
	fi
	if [[ -n $WSH_TITLE ]]; then
		print "\t<title>${WSH_TITLE}${WSH_GENFILE_TITLE:+ | $WSH_GENFILE_TITLE}</title>"
	else
		print "\t<title>${WSH_GENFILE_TITLE}</title>"
	fi
	print '</head>
<body>'
}

function page_footer {
	print '<!-- Page generated by wswsh 1.2 / '"$(print ${SHELL##*/})"' - '"$(LC_ALL=C date -u)"' -->
</body>
</html>'
}
